}

apply plugin: 'net.minecraftforge.gradle.forge'

version = "0.0.1"
group= "coffee.cypher.skills"
archivesBaseName = "skills"

sourceCompatibility = "1.8"
targetCompatibility = "1.8"

minecraft {
    version = "1.8.9-11.15.0.1718"
    runDir = "run"
    useDepAts = true
   
    mappings = "snapshot_20160123"
}

dependencies {
    deobfCompile "mezz.jei:jei_1.8.9:2.16.2.78"
}

curseforge {
    apiKey = project.curseForgeApiKey
    project {
        id = '224808'
        mainArtifact(jar) {
            displayName = 'Skills ' + version
        }
        releaseType = 'release'
        changelog = file('./changelogs/' + version + '.txt')
        if (version.contains('beta')) {
            releaseType = 'beta'
        }
        if (version.contains('alpha')) {
            releaseType = 'alpha'
        }
    }
}

